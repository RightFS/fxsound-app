<Window
    x:Class="FootStepBoost.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FootStepBoost"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="600"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,10"
            FontSize="24"
            FontWeight="Bold"
            Text="FxWrapper Demo Application" />

        <!--  Audio Devices and Controls  -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <GroupBox
                Grid.Column="0"
                Margin="0,0,5,0"
                Header="Audio Devices">
                <StackPanel>
                    <ComboBox
                        x:Name="DevicesComboBox"
                        Margin="0,5"
                        SelectionChanged="DevicesComboBox_SelectionChanged" />
                    <TextBlock x:Name="DeviceInfoTextBlock" Margin="0,5" />
                </StackPanel>
            </GroupBox>

            <GroupBox
                Grid.Column="1"
                Margin="5,0,0,0"
                Header="Power">
                <ToggleButton
                    x:Name="PowerToggle"
                    Width="100"
                    Height="30"
                    Checked="PowerToggle_Checked"
                    Content="Power"
                    Unchecked="PowerToggle_Checked" />
            </GroupBox>
        </Grid>

        <!--  Audio Effects and Equalizer  -->
        <TabControl Grid.Row="2" Margin="0,0,0,10">
            <TabItem Header="Effects">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>

                        <!--  Fidelity  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Fidelity:" />
                        <Slider
                            x:Name="FidelitySlider"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="100"
                            Minimum="0"
                            TickFrequency="10"
                            TickPlacement="BottomRight"
                            ValueChanged="FidelitySlider_ValueChanged" />
                        <TextBlock
                            x:Name="FidelityValueText"
                            Grid.Row="0"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="0%" />

                        <!--  Ambience  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Ambience:" />
                        <Slider
                            x:Name="AmbienceSlider"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="100"
                            Minimum="0"
                            TickFrequency="10"
                            TickPlacement="BottomRight"
                            ValueChanged="AmbienceSlider_ValueChanged" />
                        <TextBlock
                            x:Name="AmbienceValueText"
                            Grid.Row="1"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="0%" />

                        <!--  Surround  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Surround:" />
                        <Slider
                            x:Name="SurroundSlider"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="100"
                            Minimum="0"
                            TickFrequency="10"
                            TickPlacement="BottomRight"
                            ValueChanged="SurroundSlider_ValueChanged" />
                        <TextBlock
                            x:Name="SurroundValueText"
                            Grid.Row="2"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="0%" />

                        <!--  Dynamic Boost  -->
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Dynamic Boost:" />
                        <Slider
                            x:Name="DynamicBoostSlider"
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="100"
                            Minimum="0"
                            TickFrequency="10"
                            TickPlacement="BottomRight"
                            ValueChanged="DynamicBoostSlider_ValueChanged" />
                        <TextBlock
                            x:Name="DynamicBoostValueText"
                            Grid.Row="3"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="0%" />

                        <!--  Bass  -->
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Bass:" />
                        <Slider
                            x:Name="BassSlider"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="5"
                            Maximum="100"
                            Minimum="0"
                            TickFrequency="10"
                            TickPlacement="BottomRight"
                            ValueChanged="BassSlider_ValueChanged" />
                        <TextBlock
                            x:Name="BassValueText"
                            Grid.Row="4"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="0%" />
                    </Grid>

                    <!--  Preset Buttons  -->
                    <StackPanel
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            x:Name="LoadPresetButton"
                            Width="100"
                            Margin="5"
                            Click="LoadPresetButton_Click"
                            Content="Load Preset" />
                        <Button
                            x:Name="SavePresetButton"
                            Width="100"
                            Margin="5"
                            Click="SavePresetButton_Click"
                            Content="Save Preset" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Equalizer">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <CheckBox
                        x:Name="EqEnabledCheckBox"
                        Grid.Row="0"
                        Margin="0,5"
                        Checked="EqEnabledCheckBox_Checked"
                        Content="Enable Equalizer"
                        Unchecked="EqEnabledCheckBox_Checked" />

                    <ScrollViewer Grid.Row="1">
                        <StackPanel
                            x:Name="EqBandsPanel"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal" />
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Spectrum">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button
                            x:Name="StartSpectrumButton"
                            Width="80"
                            Margin="5"
                            Click="StartSpectrumButton_Click"
                            Content="Start" />
                        <Button
                            x:Name="StopSpectrumButton"
                            Width="80"
                            Margin="5"
                            Click="StopSpectrumButton_Click"
                            Content="Stop" />
                    </StackPanel>

                    <Canvas
                        x:Name="SpectrumCanvas"
                        Grid.Row="1"
                        Background="Black" />
                </Grid>
            </TabItem>
        </TabControl>

        <!--  Status Bar  -->
        <Border
            Grid.Row="3"
            Padding="5"
            BorderBrush="Gray"
            BorderThickness="1">
            <TextBlock x:Name="StatusTextBlock" Text="Ready" />
        </Border>
    </Grid>
</Window>
